    <div class="d-flex justify-content-center mb-3 px-3">
<a  href="/campgrounds/new" class="btn btn-success mx-3">Add a new Campgroud</a>
<a  href="/reseed" class="btn btn-danger mx-3">Reseed the Database</a>
</div>

<% for (let campground of campgrounds) { %>

<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <% if (campground.images[0]) { %>
            <img src="<%= campground.images[0].url%>" alt="" class="img-fluid">
            <% } else { %>
            <img src="https://images.unsplash.com/photo-1504851149312-7a075b496cc7?q=80&w=2010&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                alt="" class="img-fluid">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"> <%= campground.title%></h5>
                <!-- <p class="card-text"><%= campground.properties.popUpMarkup%></p> -->
                <p class="card-text"><%= campground.description%></p>
                <p class="card-text">
                    <small class="text-muted"><%= campground.location%></small>
                </p>
                <p class="card-text">
                    <small class="text-muted">Owned by: <%= campground.author.username%></small>
                </p>
                <a href="/campgrounds/<%= campground._id%>" class="btn btn-primary">View <%= campground.title%></a>
            </div>
        </div>
    </div>
</div>

<% } %>




<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
</script>

<script src="/js/clusterMap.js"></script>


